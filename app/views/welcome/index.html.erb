<h1 class="flow-text"> Welcome <% if user_signed_in? %><%=current_user.name%><%else%><%= "to Blog App"%><%end%> </h1>
<p class="flow-text">
    <div class="row">
      <% @recent_post.each do |recent_post| %>
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= recent_post.title%></span>
              <i>by <%=recent_post.author%></i>
              <p><%= recent_post.blog_entry %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>

<p>this will be under everything on the welcome page</p>